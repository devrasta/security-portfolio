# 01-auth-system/.env.example

# Database
DB_NAME=auth_db
DB_USER=auth_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Redis
REDIS_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# JWT
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_STRING
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3001

# Frontend
VITE_API_URL=http://localhost:3001/api

# Email (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@rstcoder.cloud
SMTP_PASSWORD=CHANGE_PASSWORD
SMTP_FROM=Auth System <noreply@rstcoder.cloud>

# Security
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
LOGIN_RATE_LIMIT=5
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Session
SESSION_SECRET=CHANGE_THIS_SECURE_SESSION_SECRET
