generator client {
  provider     = "prisma-client"
  output       = "../src/modules/prisma/generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                     String   @id @default(uuid())
  email                  String   @unique
  password               String
  name                   String?
  role                   Role     @default(USER)
  emailVerificationToken String?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@map("users")
}

enum Role {
  USER
  ADMIN
}
