{
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "editor.quickSuggestions": {
          "strings": true
        },
        "tailwindCSS.experimental.classRegex": [
          ["class:\\s*?[\"'`]([^\"'`]*).*?[\"'`]", "[\"'`]([^\"'`]*).*?[\"'`]"]
        ]
      }
    }
  },
  "languages": {
    "CSS": {
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll": true
      }
    }
  }
}
